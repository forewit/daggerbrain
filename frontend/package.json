{
	"name": "daggerbrain",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:reset": "rm -rf .wrangler/state && drizzle-kit generate && sh -c 'for file in drizzle/*.sql; do [ -f \"$file\" ] && wrangler d1 execute daggerbrain-db --file=\"$file\" --local; done' && bun run src/lib/compendium/generate-compendium-json.ts && wrangler kv bulk put src/lib/compendium/compendium-data.json --binding=KV --local",
		"dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 bun run dev:reset && vite dev",
		"build": "vite build",
		"preview": "bun run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"seed:kv": "bun run src/lib/compendium/generate-compendium-json.ts && wrangler kv bulk put src/lib/compendium/compendium-data.json --binding=KV --remote",
		"deploy": "bun run build && wrangler deploy",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
	},
	"devDependencies": {
		"@clerk/themes": "^2.4.37",
		"@cloudflare/workers-types": "^4.20251120.0",
		"@inquirer/prompts": "^8.0.1",
		"@libsql/client": "^0.15.15",
		"@lucide/svelte": "^0.554.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^24.10.1",
		"@vitest/browser-playwright": "^4.0.5",
		"bits-ui": "^2.14.3",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"drizzle-zod": "^0.8.3",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.14",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vitest": "^4.0.5",
		"vitest-browser-svelte": "^2.0.1",
		"wrangler": "^4.49.0"
	},
	"dependencies": {
		"svelte-clerk": "^0.18.1"
	}
}
